// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Alumni {
    id             Int                @id @default(autoincrement())
    firstName      String
    lastName       String
    linkedInURL    String?
    generation     Int
    review         String?
    tfgTitle       String
    tfgDescription String
    internships    InternshipAlumni[]
    masters        MasterAlumni[]
    projects       ProjectAlumni[]
}

model Organization {
    id          Int          @id @default(autoincrement())
    name        String
    description String?
    internships Internship[]
    masters     Master[]
}

model Internship {
    id             Int                @id @default(autoincrement())
    organization   Organization       @relation(fields: [organizationId], references: [id])
    organizationId Int
    position       String
    description    String
    alumni         InternshipAlumni[]
}

model InternshipAlumni {
    alumni       Alumni     @relation(fields: [alumniId], references: [id])
    alumniId     Int
    internship   Internship @relation(fields: [internshipId], references: [id])
    internshipId Int

    @@id([alumniId, internshipId])
}

model Master {
    id             Int            @id @default(autoincrement())
    organization   Organization   @relation(fields: [organizationId], references: [id])
    organizationId Int
    name           String
    description    String?
    alumni         MasterAlumni[]
    alumniId       Int
}

model MasterAlumni {
    alumni   Alumni @relation(fields: [alumniId], references: [id])
    alumniId Int
    master   Master @relation(fields: [masterId], references: [id])
    masterId Int

    @@id([alumniId, masterId])
}

model Project {
    id          Int             @id @default(autoincrement())
    name        String
    description String?
    alumni      ProjectAlumni[]
    alumniId    Int
}

model ProjectAlumni {
    alumni    Alumni  @relation(fields: [alumniId], references: [id])
    alumniId  Int
    project   Project @relation(fields: [projectId], references: [id])
    projectId Int

    @@id([alumniId, projectId])
}
