// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Alumni {
    id              Int     @id @default(autoincrement())
    firstName       String
    lastName        String
    linkedInURL     String?
    generation      Int
    review          String?
    tfgTitle        String
    tfgDescription  String
    internships     Internship[]
    masters         Master[]
    projects        Project[]
}

model Organization {
    id              Int     @id @default(autoincrement())
    name            String
    description     String?
    internships     Internship[]
    masters         Master[]
}

model Internship {
    id              Int     @id @default(autoincrement())
    organization    Organization @relation(fields: [organizationId], references: [id])
    organizationId  Int
    position        String
    description     String
    alumni          Alumni  @relation(fields: [alumniId], references: [id])
    alumniId        Int
}

model Master {
    id              Int     @id @default(autoincrement())
    organization    Organization @relation(fields: [organizationId], references: [id])
    organizationId  Int
    name            String
    description     String?
    alumni          Alumni @relation(fields: [alumniId], references: [id])
    alumniId        Int
}

model Project {
    id              Int     @id @default(autoincrement())
    name            String
    description     String?
    alumni          Alumni @relation(fields: [alumniId], references: [id])
    alumniId        Int
}